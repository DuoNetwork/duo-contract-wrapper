{
	"name": "@finbook/duo-contract-wrapper",
	"version": "1.5.2",
	"description": "DUO Contract Wrapper",
	"author": "FinBook Pte Ltd",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"test": "jest",
		"prebuild": "rimraf dist",
		"build": "tsc --declarationDir dist -d --emitDeclarationOnly --allowJs false && tsc",
		"postbuild": "npm pack",
		"tslint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts{,x} --fix"
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"devDependencies": {
		"@babel/polyfill": "^7.4.4",
		"@types/bn.js": "^4.11.5",
		"@types/jest": "^24.0.17",
		"@types/node": "^12.6.9",
		"coveralls": "^3.0.5",
		"jest": "^24.8.0",
		"pre-commit": "^1.2.2",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.2",
		"tslint": "^5.18.0",
		"typescript": "^3.5.3"
	},
	"dependencies": {
		"@ledgerhq/hw-transport-u2f": "^4.68.2",
		"@ledgerhq/web3-subprovider": "^4.68.2",
		"abi-decoder": "^1.2.0",
		"bip39": "^3.0.2",
		"ethereumjs-wallet": "^0.6.3",
		"web3": "1.0.0-beta.37"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/FinBook/duo-contract-wrapper.git"
	},
	"keywords": [
		"DUO",
		"Contract",
		"Wrapper"
	],
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/FinBook/duo-contract-wrapper/issues"
	},
	"homepage": "https://github.com/FinBook/duo-contract-wrapper#readme",
	"files": [
		"dist"
	]
}
